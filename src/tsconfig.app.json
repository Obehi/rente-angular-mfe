{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "paths": {
      "@services/*": ["./app/shared/services/*"],
      "@features/*": ["./app/features/*"],
      "@shared/*": ["./app/shared/*"],
      "@environments/*": ["./environments/*"],
      "@assets/*": ["./assets/*"],
      "@config/*": ["./app/config/*"]
    }
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
