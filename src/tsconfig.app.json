{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "esnext",
    "paths": {
      "@services/*": ["./app/shared/services/*"],
      "@features/*": ["./app/features/*"],
      "@shared/*": ["./app/shared/*"],
      "@environments/*": ["./environments/*"],
      "@assets/*": ["./assets/*"],
      "@config/*": ["./app/config/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
